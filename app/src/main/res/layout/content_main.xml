<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/linear_section"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<Button
            android:alpha="0.1"
            android:text=""
            android:id="@+id/bt_left_section"
            android:onClick="bt_left_section"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />-->
        <TextView
            android:id="@+id/tv_linear_section"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <Spinner
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/Spinner_Section"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            />
        <!--<Button
            android:alpha="0.1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:id="@+id/bt_right_section"
            android:onClick="bt_right_section"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />-->
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:layout_width="800dp"
        android:layout_height="match_parent">
    <GridLayout
        android:layout_margin="5dp"
        android:rowCount="15"
        android:columnCount="11"
        android:layout_below="@+id/linear_section"
        android:layout_width="800dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_page"
        android:id="@+id/fragment_section">
    </GridLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:id="@+id/linear_page"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <Button
            android:text=""
            android:alpha="0.1"
            android:id="@+id/bt_left_page"
            android:onClick="bt_left_page"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_linear_page"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:alpha="0.1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:id="@+id/bt_right_page"
            android:onClick="bt_right_page"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
